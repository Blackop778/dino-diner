<Page x:Class="PointOfSale.MenuCategorySelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuCategorySelection">

    <Grid Background="Firebrick">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button Margin="10 10" Click="SelectCombo">Combos</Button>
        <Button Margin="10 10" Click="SelectEntree" Grid.Column="1">Entrees</Button>
        <Button Margin="10 10" Click="SelectSide" Grid.Row="1">Sides</Button>
        <Button Margin="10 10" Click="SelectDrink" Grid.Column="1" Grid.Row="1">Drinks</Button>
    </Grid>
</Page>
